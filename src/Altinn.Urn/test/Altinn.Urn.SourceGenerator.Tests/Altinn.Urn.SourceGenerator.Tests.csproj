<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Locator" Version="1.7.8" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.9.2" />
    <PackageReference Include="Microsoft.CodeAnalysis.Workspaces.MSBuild" Version="4.9.2" />
    <PackageReference Include="Verify.SourceGenerators" Version="2.2.0" />
    <PackageReference Include="Verify.Xunit" Version="23.5.2" />
  </ItemGroup>

  <ItemGroup>
    <SourceGenerator Include="..\..\src\Altinn.Urn.SourceGenerator\Altinn.Urn.SourceGenerator.csproj" />
    <ProjectReference Include="..\..\src\Altinn.Urn\Altinn.Urn.csproj" />
  </ItemGroup>

  <ItemGroup>
		<ProjectReference Include="@(SourceGenerator)" 
			ReferenceOutputAssembly="false" 
			Private="true"
			OutputItemType="_SourceGeneratorPath" />
	</ItemGroup>

  <Target Name="_AddSourceGeneratorReference" AfterTargets="ResolveReferences">
    <ItemGroup>
      <ReferencePath Include="@(_SourceGeneratorPath)" />
    </ItemGroup>
  </Target>

  <ItemGroup>
    <Using Include="Xunit" />
  </ItemGroup>

  <ItemGroup>
		<Compile Remove="Snapshots/**/*" />
	</ItemGroup>

</Project>
